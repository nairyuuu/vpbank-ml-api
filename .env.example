# Environment Configuration
NODE_ENV=production
PORT=3000

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=vpbank-ml-api
KAFKA_GROUP_ID=fraud-detection-group
KAFKA_TOPIC=vpbank-enriched-features

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-west-2:123456789012:fraud-alerts

# Decision System Configuration
DECISION_SYSTEM_URL=http://localhost:4000/api/decisions
DECISION_SYSTEM_API_KEY=your-decision-api-key

# Model Configuration
MODEL_PATH=./models
QR_MODEL_PATH=./models/qr_model.onnx
IBFT_MODEL_PATH=./models/ibft_model.onnx
TOPUP_MODEL_PATH=./models/topup_model.onnx

# Fraud Detection Thresholds
QR_FRAUD_THRESHOLD=0.5
IBFT_FRAUD_THRESHOLD=0.5
TOPUP_FRAUD_THRESHOLD=0.5

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
